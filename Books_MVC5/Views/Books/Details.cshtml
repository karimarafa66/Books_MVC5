@model Books_MVC5.Models.Book

@{ ViewBag.Title = "Details"; }

<ul class="list-group list-group-flush">
    <li class="list-group-item bg-success text-white font-weight-bold d-flex justify-content-between align-items-center">
        <span>@Model.Title</span>
        <a href="@Url.Action("Edit", "Books", new { id = Model.Id })" class="btn btn-primary">
            <i class="icofont-ui-edit"></i>
        </a>
    </li>
    
    <li class="list-group-item">@Model.Author</li>
    <li class="list-group-item">@Model.Category.Name</li>
    <li class="list-group-item">@Model.Description</li>
    <li class="list-group-item">@Model.AddedOn</li>
</ul>
<a href="@Url.Action("Index","Books")" class="btn btn-secondary m-1">
    <i class="icofont-arrow-left"></i>
    Back
</a>